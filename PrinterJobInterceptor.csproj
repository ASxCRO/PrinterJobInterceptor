    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="PrinterJobInterceptor.Tests\**" />
    <EmbeddedResource Remove="PrinterJobInterceptor.Tests\**" />
    <None Remove="PrinterJobInterceptor.Tests\**" />
